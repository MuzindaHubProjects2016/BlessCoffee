<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a52a2a">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/iconn"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/blesscofee"
      />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="We accept onsite cash payment and paynow transactions click on image to pay"
        android:id="@+id/textView3"
        android:textColor="#ffff00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay using "
        android:id="@+id/payUsing"
        android:layout_marginTop="30dp"
        android:textColor="#ffff00" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a52a2a"
        android:id="@+id/contain">



    <ImageButton
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/cash"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:id="@+id/cash"
        android:layout_marginTop="20dp"
        android:background="#a52a2a" />



    <ImageButton
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/paynow"
        android:layout_alignBottom="@+id/cash"
        android:layout_toEndOf="@+id/cash"
        android:layout_toRightOf="@+id/cash"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:id="@+id/paynow"
        android:background="#a52a2a" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:id="@+id/Logout"
        android:layout_marginTop="60dp"
        android:textColor="#ffff00" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:visibility="gone" />


</LinearLayout>
